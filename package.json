{
    "name": "cryptotithe",
    "version": "0.7.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "yarn run build-dev && electron .",
        "web": "yarn run build-dev && opn ./index.html",
        "test": "jest",
        "test-coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
        "build-dev": "tsc -p configs/tsconfig.json && yarn run browserify",
        "build": "tsc -p configs/tsconfig.json && yarn run browserify-prod",
        "browserify": "browserify ./react.js -o ./bundle.js -u ./data.json --im",
        "browserify-prod": "browserify ./react.js -o ./bundle.js -u ./data.json --im -g [ envify --NODE_ENV production ] -g uglifyify | uglifyjs --compress --mangle",
        "lint": "yarn run tslint && yarn run stylelint",
        "tslint": "tslint -p ./configs/tsconfig.json -c ./configs/tslint.json --fix",
        "stylelint": "stylelint \"**/*.css\"",
        "full-build-test-ci": "yarn run lint && yarn run test-coveralls && yarn run build",
        "prod-start": "set NODE_ENV=production&& yarn run start",
        "dist": "node ./configs/dist.js",
        "release": "yarn run build && yarn run dist"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/classnames": "^2.2.8",
        "@types/clone": "^0.1.30",
        "@types/faker": "^4.1.5",
        "@types/got": "^9.6.0",
        "@types/jest": "^24.0.15",
        "@types/node": "^12.0.8",
        "@types/papaparse": "^4.5.9",
        "@types/react": "^16.8.22",
        "@types/react-dom": "^16.8.4",
        "@types/react-infinite-scroller": "^1.2.1",
        "@types/validator": "^10.11.1",
        "browserify": "^16.2.3",
        "coveralls": "^3.0.4",
        "electron": "^5.0.4",
        "electron-devtools-installer": "^2.2.4",
        "electron-packager": "^14.0.0",
        "envify": "^4.1.0",
        "faker": "^4.1.0",
        "jest": "^24.8.0",
        "opn-cli": "^5.0.0",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^18.3.0",
        "ts-jest": "^24.0.2",
        "tslint": "^5.17.0",
        "typescript": "^3.5.2",
        "uglify-js": "^3.6.0",
        "uglifyify": "^5.0.1"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "./configs/tsconfig.json"
            }
        }
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "color-hex-case": "upper"
        }
    },
    "dependencies": {
        "apexcharts": "^3.8.1",
        "classnames": "^2.2.6",
        "clone": "^2.1.2",
        "font-awesome": "^4.7.0",
        "got": "^9.6.0",
        "is-electron": "^2.2.0",
        "papaparse": "^5.0.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-infinite-scroller": "^1.2.4",
        "tachyons": "^4.11.1",
        "validator": "^11.0.0"
    }
}
