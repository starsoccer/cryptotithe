{
    "name": "cryptotithe",
    "version": "0.8.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test-coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
        "build": "next build",
        "dev": "next dev",
        "export": "next export",
        "start-electron": "SET isElectron=true&& yarn run build && yarn run export && electron .",
        "electron": "electron .",
        "browserify": "browserify ./react.js -o ./bundle.js -u ./data.json --im",
        "browserify-prod": "browserify ./react.js -o ./bundle.js -u ./data.json --im -g [ envify --NODE_ENV production ] -g uglifyify | uglifyjs --compress --mangle",
        "lint": "yarn run eslint && yarn run stylelint",
        "eslint": "eslint . --ext .ts,.tsx --quiet",
        "stylelint": "stylelint \"index.css\"",
        "full-build-test-ci": "yarn run lint && yarn run test-coveralls",
        "prod-start": "set NODE_ENV=production&& yarn run start",
        "dist": "node ./configs/dist.js",
        "release": "yarn run build && yarn run dist",
        "release-ipfs": "node ./configs/ipfs-release.js && ipfs-deploy ipfs/"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/classnames": "^2.2.9",
        "@types/clone": "^0.1.30",
        "@types/faker": "^4.1.8",
        "@types/got": "^9.6.9",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.14",
        "@types/papaparse": "^5.0.2",
        "@types/react": "16.9.55",
        "@types/react-dom": "16.9.9",
        "@types/react-infinite-scroller": "^1.2.1",
        "@types/validator": "10.11.3",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "browserify": "^16.5.0",
        "coveralls": "^3.0.9",
        "electron": "10.1.5",
        "electron-devtools-installer": "^2.2.4",
        "electron-packager": "^14.1.1",
        "envify": "^4.1.0",
        "eslint": "^7.12.1",
        "faker": "^4.1.0",
        "jest": "26.6.3",
        "opn-cli": "^5.0.0",
        "stylelint": "^12.0.0",
        "stylelint-config-standard": "^19.0.0",
        "ts-jest": "^26.4.4",
        "typescript": "^4.0.5"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "./tsconfig.json"
            }
        }
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "color-hex-case": "upper"
        }
    },
    "dependencies": {
        "apexcharts": "^3.10.1",
        "axios": "^0.19.0",
        "classnames": "^2.2.6",
        "clone": "^2.1.2",
        "font-awesome": "^4.7.0",
        "got": "9.6.0",
        "is-electron": "^2.2.0",
        "next": "10.0.3",
        "papaparse": "^5.1.0",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-infinite-scroller": "^1.2.4",
        "tachyons": "^4.11.1",
        "validator": "^12.1.0"
    }
}
